<div class="mt-4">
    <h3>Tài khoản </h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">address</th>
                <th scope="col">phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each user}}
            <tr>
                <th scope="row">{{@index }}</th>
                <td>{{this.username}}</td>
                <td>{{this.email}}</td>
                <td>{{this.address}}</td>
                <td>{{this.phone}}</td>
                <td>
                   <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#dlt-tour"
                        style="color: red;">Xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="dlt-tour" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có đồng ý xóa tài khoản này</p>
            </div>
            <div class="modal-footer">
        <button id="btn-dlt-tour" type="button" class="btn btn-danger">Đồng Ý</button>
                <button type="button" class="btn btn-safe" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>



{{!-- del hidden form --}}
<form name="dlt-tour-form" method="POST"></form>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        var userID;
        var delForm = document.forms['dlt-tour-form'];
        var btnDltUser = document.getElementById('btn-dlt-tour');

        $('#dlt-tour').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            userID = button.data('id');
        });



        btnDltUser.onclick = function () {
            alert(userID);
            delForm.action = '/user/' + userID + '?_method=DELETE';
            delForm.submit();
        }

    });


</script>
