<div class="mt-4">
    <h3>Hoá đơn </h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">ID Hoá đơn</th>
                <th scope="col">ID Khách hàng</th>
                <th scope="col">ID Sản phẩm</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Giá</th>
            </tr>
        </thead>
        <tbody>
            {{#each bill}}
            <tr>
                <th scope="row">{{@index }}</th>
                <td>{{this._id}}</td>
                <td>{{this.id_user}}</td>
                <td>{{this.id_product}}</td>
                <td>{{this.nameuser}}</td>
                <td>{{this.address}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.price}}</td>
                <td>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#dlt-tour"
                        style="color: red;">Xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="dlt-tour" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa hoá đơn</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có đồng ý xóa hoá đơn này</p>
            </div>
            <div class="modal-footer">
        <button id="btn-dlt-tour" type="button" class="btn btn-danger">Đồng Ý</button>
                <button type="button" class="btn btn-safe" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<form name="dlt-tour-form" method="POST"></form>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        var billID;
        var delForm = document.forms['dlt-tour-form'];
        var btnDltBill = document.getElementById('btn-dlt-tour');

        $('#dlt-tour').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            billID = button.data('id');
        });



        btnDltBill.onclick = function () {
            alert(billID);
            delForm.action = '/bill/' + billID + '?_method=DELETE';
            delForm.submit();
        }

    });


</script>

