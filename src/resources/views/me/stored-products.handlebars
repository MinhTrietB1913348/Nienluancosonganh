<div class="mt-4">
    <h3>Sản phâm cửa hàng</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Giá tiền</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{@index }}</th>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/products/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                    <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#dlt-tour"
                        style="color: red;">Xoá</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div id="dlt-tour" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có đồng ý xóa sản phẩm này</p>
            </div>
            <div class="modal-footer">
        <button id="btn-dlt-tour" type="button" class="btn btn-danger">Đồng Ý</button>
                <button type="button" class="btn btn-safe" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<form name="dlt-tour-form" method="POST"></form>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        var productID;
        var delForm = document.forms['dlt-tour-form'];
        var btnDltProduct = document.getElementById('btn-dlt-tour');

        $('#dlt-tour').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productID = button.data('id');
        });



        btnDltProduct.onclick = function () {
            alert(productID);
            delForm.action = '/products/' + productID + '?_method=DELETE';
            delForm.submit();
        }

    });


</script>

