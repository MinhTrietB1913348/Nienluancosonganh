<div class="mt-4">
    <h3>EDIT Product</h3>
    <form method="POST" action="/products/{{product._id}}?_method=PUT" >
        <div class="form-group">
            <label for="name">Name Product</label>
            <input type="type" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="name">Discription</label>
            <textarea  class="form-control" id="discription" name="discription">{{product.discription}}</textarea>
        </div>
        <div class="form-group">
            <label for="name">Link Video</label>
            <input type="type" class="form-control"value="{{product.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="name">Img</label>
            <input type="type" class="form-control"value="{{product.img}}" id="img" name="img">
        </div>
        <div class="form-group">
            <label for="name">Price</label>
            <input type="type" class="form-control"value="{{product.price}}" id="price" name="price">
        </div>
        <button type="submit" class="btn btn-primary">SAVE</button>
    </form>
</div>